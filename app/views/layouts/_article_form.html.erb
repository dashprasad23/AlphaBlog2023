<%if @article.errors.any? %>
  <h2>The fallowing error prevent the article being saved</h2>
  <ol>
    <% @article.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <%end %>
  </ol>
<%end %>

<%= form_with(model: @article, locale: true) do |f| %>
  <p>
    <%= f.label :title %>
    <br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %>
    <br/>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>

<% end %>