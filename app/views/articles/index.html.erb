
<div class="container-fluid d-flex mt-4">
  <h1>Articles</h1>
  <p class="mx-5 m-1">
    <%= link_to 'Create new articles', new_article_path, class: "btn btn-primary" %>
  </p>
</div>
<div class="container-fluid d-flex flex-wrap">
  <% if @articles.length > 0 %>
    <% @articles.each do |article| %>
      <div class="card w-25 m-1">

        <div class="card-body">
          <h3 class="card-title">
            <%= article.id %> .
            <%= article.title %>
          </h3>
          <p class="card-text">
            <%=  article.description %>
          </p>

        </div>
        <div class="card-footer">
          <%= link_to 'Show', article, class: "btn btn-primary" %>
          <%= link_to 'Edit', edit_article_path(article), class: "btn btn-secondary" %>
          <%= link_to 'Delete', article, data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
          }, class: "btn btn-danger" %>
        </div>

      </div>
    <%end %>
  <% end %>


</div>






