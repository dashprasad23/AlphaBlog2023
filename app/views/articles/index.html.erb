<h1>Article</h1>

<table>
  <thead>
  <th>
    Id
  </th>
  <th>
    Name
  </th>
  <th>
    Description
  </th>
  <th>
    Action
  </th>
  </thead>
  <tbody>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.id %></td>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td>
        <%= link_to 'Show', article %>
        <%= link_to 'Edit', edit_article_path(article) %>
        <%= link_to 'Delete', article, data: {
          turbo_method: :delete,
          turbo_confirm: "Are you sure?"
        } %>

      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<p>
  <%= link_to 'Create new articles', new_article_path %>
</p>